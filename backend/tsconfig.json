{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                
    "moduleResolution": "NodeNext",    
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "../database"],
  "exclude": ["../frontend", "../documentation"]
}
